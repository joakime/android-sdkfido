      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>exec-aapt</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <executable>${android-home}/android-${android-api-level}/tools/aapt</executable>
              <arguments>
                <argument>package</argument>
                <argument>-J</argument>
                <argument>src/main/java/@PACKAGEDIR@</argument>
                <argument>-f</argument>
                <argument>-M</argument>
                <argument>${project.basedir}/src/main/resources/AndroidManifest.xml</argument>
                <argument>-S</argument>
                <argument>${project.basedir}/src/main/resources/res</argument>
                <argument>-I</argument>
                <argument>${android-home}/android-${android-api-level}/android.jar</argument>
                <argument>-F</argument>
                <argument>${project.build.directory}/${artifactId}-resources.apk</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
