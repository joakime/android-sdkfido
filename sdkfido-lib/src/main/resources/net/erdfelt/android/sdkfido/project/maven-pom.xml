<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>@GROUPID@</groupId>
  <artifactId>@ARTIFACTID@</artifactId>
  <version>@VERSION@</version>
  <packaging>pom</packaging>
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>${project.artifactId}</artifactId>
      <classifier>stub</classifier>
      <version>${project.version}</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/android-stub.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <source-jar>${project.artifactId}-${project.version}-source.jar</source-jar>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>make-sourcejar</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <target>
                <jar basedir="${project.build.sourceDirectory}"
                     destfile="${project.build.directory}/${source-jar}"
                     includes="**/*.java" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <id>attach-jars</id>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.build.directory}/${source-jar}</file>
                  <type>jar</type>
                  <classifier>source</classifier>
                </artifact>
                <artifact>
                  <file>${project.basedir}/lib/android-stub.jar</file>
                  <type>jar</type>
                  <classifier>stub</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
